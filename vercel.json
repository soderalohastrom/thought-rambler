{
  "version": 2,
  "builds": [
    {
      "src": "backend/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "thought-ramble-parser/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "thought-ramble-parser/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "backend/app.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "backend/app.py"
    },
    {
      "src": "/assets/(.*)",
      "dest": "thought-ramble-parser/dist/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "thought-ramble-parser/dist/index.html"
    }
  ]
}