{
  "version": 2,
  "builds": [
    {
      "src": "backend/app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "thought-ramble-parser/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "thought-ramble-parser/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "backend/app.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "backend/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "thought-ramble-parser/dist/$1"
    }
  ],
  "functions": {
    "backend/app.py": {
      "runtime": "python3.11",
      "maxDuration": 30
    }
  },
  "buildCommand": "cd thought-ramble-parser && pnpm install && pnpm build"
}